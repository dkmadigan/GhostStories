<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberedImageView">
        <attr name="x_offset" format="float"/>
        <attr name="y_offset" format="float"/>
        <attr name="text_size" format="integer"/>
        <attr name="text_color" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="TauTokenView">
        <attr name="token_color">
            <enum name="black" value="0" />
            <enum name="blue" value="1" />
            <enum name="green" value="2" />
            <enum name="red" value="3" />
            <enum name="yellow" value="4" />
        </attr>       
    </declare-styleable>
    
    <declare-styleable name="PlayerBoardCardView">
        <attr name="card_location">
            <enum name="left" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>     
</resources>