<games.ghoststories.views.aux_area.CardInfoView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FFFFFFF"
    tools:context=".activities.GameScreenActivity" >
      
    <!-- 
    <ImageView
        android:id="@+id/card_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100dp"
        android:src="@drawable/card_info_layer" />
    -->       
    <ImageView 
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="280dp"
        android:layout_marginLeft="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/canvas3"/>

     <ImageView
        android:id="@+id/card"
        android:layout_width="250dp"
        android:layout_height="375dp"
        android:layout_alignLeft="@id/background"
        android:layout_marginLeft="63dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ghost_49_grave_walker"/>
    
    <ImageView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="280dp"
        android:layout_marginLeft="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/card_details"/>
    
    <ImageView
        android:id="@+id/close"
        android:contentDescription="@string/close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@id/background"
        android:layout_alignTop="@id/background"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-10dp"
        android:src="@drawable/close"
        android:onClick="closeCardInfo" />

</games.ghoststories.views.aux_area.CardInfoView>