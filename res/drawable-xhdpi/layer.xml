    <item android:top="0dp" android:left="0dp">
        <bitmap android:src="@drawable/haunter"
            android:gravity="top"/>
    </item>  
    <item android:top="0dp" android:left="0dp">
        <bitmap android:src="@drawable/haunter"
            android:gravity="bottom"/>
    </item>  
