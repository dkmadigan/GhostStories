<?xml version="1.0" encoding="utf-8"?>
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="25dp"/>
    <gradient
        android:angle="270"
        android:centerX="0"
        android:centerY="0.5"
        android:startColor="#FF002F8C"        
        android:endColor="#FF0099FF"
        android:type="linear"
        android:useLevel="false"/>
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
    <stroke
        android:width="3dp"
        android:color="#FF000000"/>
</shape>